<div class="container">
  <div class="students-box-color"></div>
    <div class="students-box-color2"></div>
    <div class="students-box-color3"></div>
    <div class="students-circle-color"></div>

    <div class="projects-content row">
      {{#each projects}}
        <div class="col-12 col-md-6 col-lg-4">
          <div class="project-card row">
              <div class="project-card-thumbnail col-6">
                <img src="{{this.images.[0]}}" alt="profile picture">
              </div>
              <div class="project-card-infos col-6" >
                  <h2>{{this.name}}</h2>      
                <button><a href="/projects/{{this.id}}">Plus d'info</a></button>
              </div>
          </div> 
        </div>
      {{/each }}
    </div>

</div>